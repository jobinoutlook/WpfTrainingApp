<Window x:Class="WpfThemeApp2.PaintWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfThemeApp2"
        Style="{StaticResource CustomWindowStyle}"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        Title="PaintWindow" Height="400" Width="645">
    <Grid>
        <Canvas x:Name="paintCanvas" Margin="0,0,95,0">
            <Canvas.RenderTransform>
                <!-- Flip Y axis -->
                <ScaleTransform ScaleY="-1" CenterY="183"/>
            </Canvas.RenderTransform>
        </Canvas>
        <Button x:Name="btnPrint" Content="Print" HorizontalAlignment="Left" Margin="570,10,0,0" VerticalAlignment="Top" Width="60" Click="btnPrint_Click" />
    </Grid>
</Window>
