<Window x:Class="WpfThemeApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfThemeApp2"
        mc:Ignorable="d"
        Style="{StaticResource CustomWindowStyle}"
        Tag="MainWindow"
        Title="Theme App" Height="450" Width="800">
    <Grid>
        <Menu x:Name="menu" Margin="0,0,0,395">
            
            <MenuItem Header="App">
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            
            <MenuItem Header="Edit">
                <MenuItem Header="Options" Click="Options_Click"/>
            </MenuItem>
            
            <MenuItem Header="Utils">
                <MenuItem Header="Canvas" Click="Canvas_Click"/>
            </MenuItem>

            <MenuItem Header="Windows">
                <MenuItem Header="SubWindow" Click="SubWindow_Click"/>
                <MenuItem Header="LoginWindow" Click="LoginWindow_Click"/>
                <MenuItem Header="RegularSubWindow" Click="RegularSubWindow_Click"/>
            </MenuItem>
            
            <MenuItem Header="Help">
                <MenuItem Header="About" Click="About_Click"/>
            </MenuItem>
            
        </Menu>

    </Grid>
</Window>
