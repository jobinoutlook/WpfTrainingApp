        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfThemeApp2"
        mc:Ignorable="d"
        Style="{StaticResource CustomWindowStyle}"
        Tag="MainWindow"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="button" Content="Subwindow" HorizontalAlignment="Left" Margin="310,200,0,0" VerticalAlignment="Top" Click="button_Click"/>
        <Button x:Name="button1" Content="LoginWindow" HorizontalAlignment="Left" Margin="420,200,0,0" VerticalAlignment="Top" Click="button1_Click"/>
        <Button x:Name="button2" Content="Regular subwindow" HorizontalAlignment="Left" Margin="540,200,0,0" VerticalAlignment="Top" Width="115" Click="button2_Click"/>

    </Grid>
</Window>
