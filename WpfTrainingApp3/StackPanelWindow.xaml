<Window x:Class="WpfTrainingApp3.StackPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTrainingApp3"
        mc:Ignorable="d"
        Title="StackPanelWindow" Height="450" Width="800">
    <StackPanel Background="DeepSkyBlue">

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="January" Width="100" Height="35" Margin="5" Background="LightBlue"/>
            <Button Content="February" Width="100" Height="35" Margin="5" Background="LightBlue" />
            <Button Content="March" Width="100" Height="35" Margin="5" Background="LightBlue"/>
            <Button Content="April" Width="100" Height="35" Margin="5" Background="LightBlue"/>
        </StackPanel>
        <Grid Height="180">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Background="Aqua" Margin="0,0,120,0">
                <Button Content="Button One" Width="100" Height="35" Margin="5" Background="Yellow" HorizontalAlignment="Right"/>
                <Button Content="Button Two" Width="100" Height="35" Margin="5" Background="Yellow" HorizontalAlignment="Right" />
                <Button Content="Button Three" Width="100" Height="35" Margin="5" Background="Yellow" HorizontalAlignment="Right"/>
                <Button Content="Button Four" Width="100" Height="35" Margin="5" Background="Yellow" HorizontalAlignment="Right"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Background="Aqua" Margin="130,0,0,0">
                <Button Content="Button Five" Width="100" Height="35" Margin="5" Background="Yellow" HorizontalAlignment="Left"/>
                <Button Content="Button Six" Width="100" Height="35" Margin="5" Background="Yellow" HorizontalAlignment="Left" />
                <Button Content="Button Seven" Width="100" Height="35" Margin="5" Background="Yellow" HorizontalAlignment="Left"/>
                <Button Content="Button Eight" Width="100" Height="35" Margin="5" Background="Yellow" HorizontalAlignment="Left"/>
            </StackPanel>
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,20">
            <StackPanel Background="LightBlue" Width="200">
                <TextBlock Text="Left Panel" HorizontalAlignment="Center" />
                <Button Content="Button 1" />
            </StackPanel>

            <StackPanel Background="LightGreen" Width="200">
                <TextBlock Text="Right Panel" HorizontalAlignment="Center" />
                <Button Content="Button 2" />
            </StackPanel>
        </StackPanel>

        


    </StackPanel>

    

</Window>
