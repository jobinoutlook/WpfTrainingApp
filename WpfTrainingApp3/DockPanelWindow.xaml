<Window x:Class="WpfTrainingApp3.DockPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTrainingApp3"
        mc:Ignorable="d"
        Title="DockPanelWindow" Height="360" Width="610">
    <Grid>
        <DockPanel Background="LightGray">
            <Button Content="Left" FontSize="20" DockPanel.Dock="Left" Background="Wheat"/>
            <Button Content="Top" FontSize="20" DockPanel.Dock="Top" Background="Yellow"/>
            <Button Content="Right" FontSize="20" DockPanel.Dock="Right" Background="Wheat"/>
            <Button Content="Bottom" FontSize="20" DockPanel.Dock="Bottom" Background="Yellow"/>
            <Button Content="Fill" FontSize="20" Background="LightBlue"/>
        </DockPanel>
    </Grid>
</Window>
