        <Button Content="Bottom-Left" Canvas.Bottom="20" Canvas.Left="20" Background="Yellow"/>
        <Button Content="Bottom-Right" Canvas.Bottom="20" Canvas.Right="20" Background="Yellow"/>
    </Canvas>


</Window>
