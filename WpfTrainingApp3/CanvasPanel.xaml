        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTrainingApp3"
        mc:Ignorable="d"
        Title="CanvasPanel" Height="445" Width="745">

    <Canvas>
        <Button Content="Top-Left" Canvas.Top="20" Canvas.Left="20" Background="Yellow" Canvas.ZIndex="10"/>
