<Window x:Class="WpfTrainingApp4.TooltipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTrainingApp4"
        mc:Ignorable="d"
        Title="TooltipWindow" Height="335" Width="570">
    <Grid>
        <Button x:Name="button" Content="Exit" HorizontalAlignment="Center" Margin="0,39,0,0" VerticalAlignment="Top" Height="40" Width="90" ToolTip="This is a tooltip!"/>
        <Button x:Name="button1" Content="Save" HorizontalAlignment="Center" VerticalAlignment="Center" Height="44" Width="90" RenderTransformOrigin="0.5,0.5">
            <Button.ToolTip>
                <ToolTip Background="Red" Foreground="White">
                    Click to Save Your File
                </ToolTip>
            </Button.ToolTip>
        </Button>

    </Grid>
</Window>
