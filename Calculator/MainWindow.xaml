<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Title="Calculator" Height="525" Width="350">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Label Content="0" x:Name="lblResult"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               FontSize="60"
               Grid.ColumnSpan="4"
               />
        <Button Content="AC" x:Name="btnAC"
                Style="{StaticResource StyleFunctionButton}"
                Grid.Row="1"
                Grid.Column="0"/>
        <Button Content="+/-" x:Name="btnNegativePositive"
                Style="{StaticResource StyleFunctionButton}"
                Grid.Row="1"
                Grid.Column="1"/>
        <Button Content="%" x:Name="btnPercentage"
                Style="{StaticResource StyleFunctionButton}"
                Grid.Row="1"
                Grid.Column="2"/>
        <Button Content="/" x:Name="btnDivision"
                Style="{StaticResource StyleOperatorButton}"
                Grid.Row="1"
                Grid.Column="3"/>
        <Button Content="7" x:Name="btnSeven"
                Style="{StaticResource StyleNumberButton}"
                Grid.Row="2"
                Grid.Column="0"/>
        <Button Content="8" x:Name="btnEight" 
                Style="{StaticResource StyleNumberButton}"
                Grid.Row="2"
                Grid.Column="1"/>
        <Button Content="9"  x:Name="btnNine"
                Style="{StaticResource StyleNumberButton}"
                Grid.Row="2"
                Grid.Column="2"/>
        <Button Content="*" x:Name="btnStar"
                Style="{StaticResource StyleOperatorButton}"
                Grid.Row="2"
                Grid.Column="3"/>
        <Button Content="4" x:Name="btnFour" 
                Style="{StaticResource StyleNumberButton}"
                Grid.Row="3"
                Grid.Column="0"/>
        <Button Content="5" x:Name="btnFive" 
                Style="{StaticResource StyleNumberButton}"
                Grid.Row="3"
                Grid.Column="1"/>
        <Button Content="6" x:Name="btnSix" 
                Style="{StaticResource StyleNumberButton}"
                Grid.Row="3"
                Grid.Column="2"/>
        <Button Content="-" x:Name="btnMinus" 
                Style="{StaticResource StyleOperatorButton}"
                Grid.Row="3"
                Grid.Column="3"/>
        <Button Content="1" x:Name="btnOne" 
                Style="{StaticResource StyleNumberButton}"
                Grid.Row="4"
                Grid.Column="0"/>
        <Button Content="2" x:Name="btnTwo" 
               Style="{StaticResource StyleNumberButton}"
                Grid.Row="4"
                Grid.Column="1"/>
        <Button Content="3" x:Name="btnThree" 
                Style="{StaticResource StyleNumberButton}"
                Grid.Row="4"
                Grid.Column="2"/>
        <Button Content="+" x:Name="btnPlus" 
                Style="{StaticResource StyleOperatorButton}"
                Grid.Row="4"
                Grid.Column="3"/>
        <Button Content="0" x:Name="btnZero" 
                Style="{StaticResource StyleNumberButton}"
                Grid.Row="5"
                Grid.ColumnSpan="2"/>
        <Button Content="." x:Name="btnPoint" 
                Style="{StaticResource StyleNumberButton}"
                Grid.Row="5"
                Grid.Column="2"/>
        <Button Content="=" x:Name="btnEquals" 
                Style="{StaticResource StyleOperatorButton}"
                Grid.Row="5"
                Grid.Column="3"/>



    </Grid>
</Window>
