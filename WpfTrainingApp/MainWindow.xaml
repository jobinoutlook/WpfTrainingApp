<Window x:Class="WpfTrainingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTrainingApp"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        Title="MainWindow" Height="450" Width="800">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="30" CornerRadius="10" GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>
    <Grid>

        <Grid Height="30" VerticalAlignment="Top" Background="DarkSlateBlue" MouseDown="DragWindow">
            <Button Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"
                  Background="Transparent" BorderBrush="Transparent" >
                <Image Width="18" Height="18" Stretch="Uniform" Source="/Resource/Images/white_close_button.png"/>
            </Button>

        </Grid>



        <!-- Your content below -->
        <Grid Background="White" Margin="0,30,0,0">

            <Menu x:Name="menu" Height="25" VerticalAlignment="Top"/>

        </Grid>
    </Grid>




</Window>
