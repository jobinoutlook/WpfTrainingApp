<Window x:Class="WpfTrainingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTrainingApp"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        Title="MainWindow" Height="450" Width="800">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="30" CornerRadius="10" GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Border Background="DarkSlateBlue" Height="30" MouseDown="DragWindow" VerticalAlignment="Top">
            <Canvas>
                <Button Opacity="0" OpacityMask="White" Width="16" Height="16" HorizontalAlignment="Center" Canvas.Left="777" VerticalAlignment="Top" Canvas.Top="5">
                    <Image Stretch="Uniform" Source="/Resource/Images/white_close_button.jpg" Width="14" Height="14" />
                </Button>
            </Canvas>
        </Border>


        <!-- Your content below -->
        <Grid Background="White" Margin="0,30,0,0">

            <Menu x:Name="menu" Height="25" VerticalAlignment="Top"/>

        </Grid>
    </Grid>




</Window>
