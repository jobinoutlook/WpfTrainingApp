<Window x:Class="WpfTrainingApp.Triggers.wpf_triggers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTrainingApp.Triggers"
        mc:Ignorable="d"
        Title="wpf_triggers" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="btnTrg" TargetType="Button">
            <Setter Property="Foreground" Value="Blue"/>
            <Setter Property="Content" Value="Hi !"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="Content" Value="I'm Button"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Content" Value="I'm Pressed"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Resources></Grid.Resources>
        <Button x:Name="button" Style="{StaticResource btnTrg}"  HorizontalAlignment="Left" Margin="325,174,0,0" VerticalAlignment="Top" Height="40" Width="125"/>

    </Grid>
</Window>
