<Window x:Class="WpfCoreApp.Mvvm.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCoreApp.Mvvm.View"
        xmlns:vmlogin="clr-namespace:WpfCoreApp.Mvvm.ViewModel"
        xmlns:converters="clr-namespace:WpfCoreApp.Mvvm.ViewModel.ValueConverters"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        ContentRendered="Window_ContentRendered"
        Title="Login" Height="380" Width="300">
    <Window.Resources>
        <!--<vmlogin:LoginVM x:Key="vmlogin"/>-->
        <converters:StringToBool x:Key="stringToBool"/>
    </Window.Resources>

    <!--DataContext="{StaticResource vmlogin}"-->

    <Grid>
        <Image Source="/Resource/Images/login-image.png" Width="64" 
                Stretch="Uniform"
                HorizontalAlignment="Center"
                Margin="0,40,0,0" RenderTransformOrigin="0.5,-0.172" Height="64" VerticalAlignment="Top"/>

        <Label Content="Username" Margin="39,143,0,0" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="65" />

        <TextBox x:Name="txtUsername" Text="{Binding UserName,UpdateSourceTrigger=PropertyChanged}" Margin="109,147,0,0" TextWrapping="Wrap" Height="19" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120"/>

        <Label Content="Password" HorizontalAlignment="Left" Margin="39,172,0,0" VerticalAlignment="Top"/>


        <TextBox x:Name="txtPassword" Text="{Binding Password,UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding UserName, Converter={StaticResource stringToBool}}" HorizontalAlignment="Left" Margin="109,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>


        <Button x:Name="btnLogin"  Command="{Binding LoginCommand}" CommandParameter="{Binding Password}"
                 Content="Login" HorizontalAlignment="Center" Margin="0,218,0,0" VerticalAlignment="Top" Width="64"/>

        <Button x:Name="btnCancel"  
                Content="Cancel" HorizontalAlignment="Center" Margin="0,258,0,0" VerticalAlignment="Top" Width="64" Click="btnCancel_Click"/>
        <Label x:Name="label" Content="{Binding Message}" Foreground="OrangeRed" HorizontalAlignment="Center" Margin="0,294,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblUsnPwd" Content="username=jobin , password=admin123" FontStyle="Italic" HorizontalAlignment="Left" Margin="48,317,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.263,0.579"/>
    </Grid>
</Window>
<!--IsEnabled="{Binding Password, Converter={StaticResource stringToBool}}"-->
<!--Command="{Binding LoginCommand}" CommandParameter="{Binding Password}"-->