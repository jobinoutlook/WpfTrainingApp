<Window x:Class="WpfCoreApp.Mvvm.View.ContactsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCoreApp.Mvvm.View"
        xmlns:vm="clr-namespace:WpfCoreApp.Mvvm.ViewModel"
        xmlns:uc="clr-namespace:WpfCoreApp.Controls"
        mc:Ignorable="d"
        Title="Contacts Window (MVVM)" Height="550" Width="455">
    <!--<Window.Resources>
        <vm:ContactsVM x:Key="vm" />
    </Window.Resources>-->
    <Grid>
        <!--DataContext="{StaticResource vm}">-->
        <GroupBox x:Name="groupBox" Header="Search" FontSize="14" Margin="20,0,20,0" Height="54" VerticalAlignment="Top">
            <TextBox x:Name="txtSearch" TextChanged="txtSearch_TextChanged"/>
        </GroupBox>
        <ListView x:Name="lstviewContacts"  SelectionChanged="lstviewContacts_SelectionChanged"
          ScrollViewer.VerticalScrollBarVisibility="Visible"
          ScrollViewer.CanContentScroll="False" Height="380" VerticalAlignment="Top" Margin="20,69,20,0">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <uc:ContactControl Contact="{Binding}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="btnNewContact" Content="New Contact" HorizontalAlignment="Center" Margin="0,469,0,0" VerticalAlignment="Top" Width="83" Height="35" Click="btnNewContact_Click"/>



    </Grid>
</Window>
