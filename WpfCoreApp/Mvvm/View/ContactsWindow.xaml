<Window x:Class="WpfCoreApp.Mvvm.View.ContactsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCoreApp.Mvvm.View"
        xmlns:vm="clr-namespace:WpfCoreApp.Mvvm.ViewModel"
        mc:Ignorable="d"
        Title="Contacts Window (MVVM)" Height="525" Width="450">
    <!--<Window.Resources>
        <vm:ContactsVM x:Key="vm" />
    </Window.Resources>-->
    <Grid>
        <!--DataContext="{StaticResource vm}">-->
        <GroupBox x:Name="groupBox" Header="Search" Margin="20,0,20,0" Height="54" VerticalAlignment="Top">
            <TextBox x:Name="txtSearch"/>
        </GroupBox>
        <ListView x:Name="listView" ItemsSource="{Binding Contacts}" SelectedItem="{Binding SelectedContact,Mode=TwoWay}"
                  SelectionChanged="listView_SelectionChanged"
                  Margin="30,89,30,30" ScrollViewer.VerticalScrollBarVisibility="Visible">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Background="#AAE5E5E5">
                        <StackPanel Margin="5">
                            <TextBlock x:Name="txbName" Text="{Binding Name}" FontSize="20" FontWeight="Bold"/>
                            <TextBlock x:Name="txbEmail" Text="{Binding Email}" FontSize="15" Foreground="DodgerBlue"/>
                            <TextBlock x:Name="txbPhone" Text="{Binding PhoneNumber}" FontSize="15" FontStyle="Italic"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>



    </Grid>
</Window>
