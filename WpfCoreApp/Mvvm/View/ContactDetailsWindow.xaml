<Window x:Class="WpfCoreApp.Mvvm.View.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCoreApp.Mvvm.View"
        xmlns:vm="clr-namespace:WpfCoreApp.Mvvm.ViewModel"
        mc:Ignorable="d"
        Title="Contact Details" Height="300" Width="300">
    <!--<Window.Resources>
        <vm:ContactsVM x:Key="vm"/>
    </Window.Resources>-->
    <Border BorderBrush="DarkGray" BorderThickness="2">

        <Grid>
            <StackPanel Margin="10">
                <TextBox x:Name="txtName" Text="{Binding SelectedContact.Name, Mode=TwoWay}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" Text="{Binding SelectedContact.Email, Mode=TwoWay}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtPhone" Text="{Binding SelectedContact.PhoneNumber, Mode=TwoWay}" Margin="0,0,0,5"/>
                <Button Content="Update" x:Name="btnUpdate" Margin="0,10,0,10" />
                <Button Content="Delete" x:Name="btnDelete" Margin="0,10,0,10"
            Background="Red" Foreground="White" />
                <Button Content="Cancel" x:Name="btnCancel" Margin="0,10,0,10" 
            Click="btnCancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
