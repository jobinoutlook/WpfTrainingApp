<Window x:Class="WpfTrainingApp2.EADockPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTrainingApp2"
        mc:Ignorable="d"
        Title="EADockPanel" Height="450" Width="800">
    <DockPanel>
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Background="Yellow" FontSize="22">Top</Button>
        <Button HorizontalAlignment="Left" VerticalAlignment="Center" Background="Yellow" FontSize="22">Center</Button>
        <Button HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="Yellow" FontSize="22">Bottom</Button>
        <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Yellow" FontSize="22">Stretch</Button>
    </DockPanel>
</Window>
