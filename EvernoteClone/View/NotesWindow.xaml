<Window x:Class="EvernoteClone.View.NotesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EvernoteClone.View"
        xmlns:vm="clr-namespace:EvernoteClone.ViewModel"
        xmlns:uc="clr-namespace:EvernoteClone.View.UserControls"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="NotesWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <vm:NotesVM x:Key="nvm"/>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel DataContext="{StaticResource nvm}">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New Notebook" Command="{Binding NewNotebookCommand}"/>
                <MenuItem Header="New Note" Command="{Binding NewNoteCommand}" CommandParameter="{Binding SelectedNotebook,Mode=TwoWay}"/>
                <Separator/>
                <MenuItem Header="Exit" x:Name="mnuExit" Click="mnuExit_Click"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="txbStatus"/>
            </StatusBarItem>
        </StatusBar>
        
        <ListView DockPanel.Dock="Left" Width="140" Background="MidnightBlue"
          ItemsSource="{Binding Notebooks}"
          SelectedValue="{Binding SelectedNotebook,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <uc:DisplayNotebook Notebook="{Binding}">
                            <uc:DisplayNotebook.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Rename" 
                                              Command="{Binding Source={StaticResource nvm},Path=EditCommand}"
                                              CommandParameter="{Binding Source={StaticResource nvm},Path=SelectedNotebook}"/>
                                </ContextMenu>
                            </uc:DisplayNotebook.ContextMenu>
                        </uc:DisplayNotebook>
                        <TextBox Text="{Binding Name, Mode=TwoWay}"
                            Visibility="{Binding Source={StaticResource nvm},Path=IsVisible}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="LostFocus">
                                    <i:InvokeCommandAction Command="{Binding Source={StaticResource nvm},Path=EndEditingCommand}"
                                                           CommandParameter="{Binding}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBox>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
        
        <ListView DockPanel.Dock="Left" Width="140"
          ItemsSource="{Binding Notes}"
                  SelectedValue="{Binding SelectedNote,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <uc:DisplayNote Note="{Binding}"/>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Content="Speech" x:Name="btnSpeech"/>
                <ToggleButton x:Name="btnBold" Click="btnBold_Click" >
                    <TextBlock Text="B" FontWeight ="Bold"/>
                </ToggleButton>
                <ToggleButton x:Name="btnItalic" Click="btnItalic_Click">
                    <TextBlock Text="i" FontStyle="Italic"/>
                </ToggleButton>
                <ToggleButton x:Name="btnUnderline" Click="btnUnderline_Click">
                    <TextBlock Text="U" TextDecorations="Underline"/>
                </ToggleButton>
                <ComboBox x:Name="cbxFontFamily" Width="100" SelectionChanged="cbxFontFamily_SelectionChanged"/>
                <ComboBox x:Name="cbxFontSize" Width="50" IsEditable="True" TextBoxBase.TextChanged="cbxFontSize_TextChanged"/>
                <Button Content="Save" x:Name="btnSaveNote" Click="btnSaveNote_Click"/>
            </ToolBar>
        </ToolBarTray>
        <Grid>
            <RichTextBox x:Name="rtxbNoteContent" TextChanged="rtxbNoteContent_TextChanged" SelectionChanged="rtxbNoteContent_SelectionChanged"/>
        </Grid>
    </DockPanel>
</Window>
