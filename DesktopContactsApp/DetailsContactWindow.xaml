<Window x:Class="DesktopContactsApp.DetailsContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="DetailsContactWindow" Height="300" Width="300">
    <Border BorderBrush="DarkGray" BorderThickness="2">

        <Grid>
            <StackPanel Margin="10">
                <TextBox x:Name="txtName" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" Margin="0,0,0,5"/>
                <TextBox x:Name="txtPhone" Margin="0,0,0,5"/>
                <Button Content="Update" x:Name="btnUpdate"  Margin="0,10,0,10" Click="btnUpdate_Click"/>
                <Button Content="Delete" x:Name="btnDelete" Margin="0,10,0,10"
                Background="Red" Foreground="White" Click="btnDelete_Click"/>
                <Button Content="Cancel" x:Name="btnCancel" Margin="0,10,0,10"
                Click="btnCancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
